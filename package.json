{
  "name": "autoilty-business-curator",
  "version": "1.0.0",
  "description": "Canada's Premier Auto Business Curation Platform - BestDubai model for automotive excellence",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm run build",
    "test": "jest --coverage",
    "test:load": "artillery run tests/load-test.yml",
    "scrape": "python3 scripts/data-scraper.py",
    "update-scores": "node scripts/score-updater.js",
    "seed": "node scripts/seed-database.js"
  },
  "keywords": [
    "automotive",
    "business-directory",
    "curation",
    "canada",
    "autoilty"
  ],
  "author": "Autoilty Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "redis": "^4.6.11",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "apollo-server-express": "^3.13.0",
    "graphql": "^16.8.1",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.9.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "artillery": "^2.0.3",
    "@babel/preset-env": "^7.23.6",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}


